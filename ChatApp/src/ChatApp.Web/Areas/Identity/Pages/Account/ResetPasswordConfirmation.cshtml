@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu thành công";
}

<div class="row">
    <div class="col-md-8">
        <h1>@ViewData["Title"]</h1>
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Thành công!</h4>
            <p>Mật khẩu của bạn đã được đặt lại thành công.</p>
            <hr>
            <p class="mb-0">
                Bây giờ bạn có thể <a asp-page="./Login">đăng nhập</a> bằng mật khẩu mới.
            </p>
        </div>
    </div>
</div>
