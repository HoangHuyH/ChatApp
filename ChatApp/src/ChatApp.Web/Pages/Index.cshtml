@page
@model IndexModel
@{
    ViewData["Title"] = "Chat";
}

@if (User.Identity?.IsAuthenticated == true)
{
    <input type="hidden" id="current-user-id" value="@Model.CurrentUserId" />
    <input type="hidden" id="auto-join-room" value="true" />
    
    <div class="chat-container">
        <!-- Sidebar with tabs for Contacts, Groups, and Rooms -->
        <div class="contacts-container">
            <ul class="nav nav-tabs" id="sidebarTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="contacts-tab" data-bs-toggle="tab" data-bs-target="#contacts-panel" 
                        type="button" role="tab" aria-controls="contacts" aria-selected="true">Contacts</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="groups-tab" data-bs-toggle="tab" data-bs-target="#groups-panel" 
                        type="button" role="tab" aria-controls="groups" aria-selected="false">Groups</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="rooms-tab" data-bs-toggle="tab" data-bs-target="#rooms-panel" 
                        type="button" role="tab" aria-controls="rooms" aria-selected="false">Rooms</button>
                </li>
            </ul>
            <div class="connection-status-container">
                <span id="connection-status" class="connection-status text-warning">Connecting...</span>
            </div>
            <div class="tab-content" id="sidebarTabsContent">
                <!-- Contacts Tab -->
                <div class="tab-pane fade show active" id="contacts-panel" role="tabpanel" aria-labelledby="contacts-tab">
                    <div class="search-container">
                        <input type="text" class="search-input" placeholder="Search contacts...">
                    </div>
                    
                    <div id="contacts-list" class="list-group">
                        @foreach (var friend in Model.Friends)
                        {
                            <div id="user-@friend.Id" class="contact list-group-item" onclick="selectUser('@friend.Id', '@friend.DisplayName')">
                                <div class="d-flex align-items-center">
                                    <div class="contact-avatar">
                                        @friend.DisplayName.Substring(0, 1)
                                    </div>
                                    <div class="contact-details ms-2">
                                        <div class="contact-name">@friend.DisplayName</div>
                                        <div class="contact-status small">@(friend.Status?.IsOnline == true ? "Online" : "Offline")</div>
                                    </div>
                                    <div class="status-indicator ms-auto @(friend.Status?.IsOnline == true ? "online" : "offline")"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                
                <!-- Groups Tab -->
                <div class="tab-pane fade" id="groups-panel" role="tabpanel" aria-labelledby="groups-tab">
                    <div class="search-container">
                        <input type="text" class="search-input" placeholder="Search groups...">
                    </div>
                    
                    <div id="groups-list" class="list-group">
                        @foreach (var group in Model.Groups)
                        {
                            <div id="group-@group.GroupId" class="contact list-group-item" onclick="selectGroup('@group.GroupId', '@group.GroupName')">
                                <div class="d-flex align-items-center">
                                    <div class="contact-avatar">
                                        @group.GroupName.Substring(0, 1)
                                    </div>
                                    <div class="contact-details ms-2">
                                        <div class="contact-name">@group.GroupName</div>
                                        <div class="contact-status small">@group.MemberCount members</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="mt-3 px-3">
                        <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#createGroupModal">
                            <i class="bi bi-plus-circle me-1"></i> Create Group
                        </button>
                    </div>
                </div>
                
                <!-- Rooms Tab -->
                <div class="tab-pane fade" id="rooms-panel" role="tabpanel" aria-labelledby="rooms-tab">
                    <div class="search-container">
                        <input type="text" class="search-input" placeholder="Search rooms...">
                    </div>
                    
                    <div id="rooms-list" class="list-group">
                        <!-- Rooms will be loaded here dynamically -->
                    </div>
                    
                    <div class="mt-3 px-3">
                        <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#createRoomModal">
                            <i class="bi bi-plus-circle me-1"></i> Create Room
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Chat Area -->
        <div id="chat-area" class="chat-area @(string.IsNullOrEmpty(Model.SelectedUserId) ? "d-none" : "")">
            <div class="chat-header">
                <div class="d-flex align-items-center">
                    <button class="btn btn-sm btn-light me-2 back-button d-md-none">
                        <i class="bi bi-arrow-left"></i>
                    </button>
                    <h5 id="selected-chat-name" class="mb-0">@Model.SelectedChatName</h5>
                </div>
                <div class="chat-actions">
                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#uploadFileModal">
                        <i class="bi bi-paperclip"></i>
                    </button>
                </div>
            </div>
            
            <div id="message-list" class="chat-body">
                @if (string.IsNullOrEmpty(Model.SelectedUserId))
                {
                    <div class="empty-chat-message">
                        <i class="bi bi-chat-dots"></i>
                        <p>Select a contact to start chatting</p>
                    </div>
                }
            </div>
            
            <!-- Room Info Sidebar (visible only in room chat) -->
            <div id="room-info" class="room-info d-none">
                <div class="room-info-header">
                    <h6 class="mb-2">Room Members</h6>
                    <button type="button" class="btn-close" aria-label="Close"></button>
                </div>
                <div id="room-users-list" class="list-group list-group-flush">
                    <!-- Room users will be loaded here dynamically -->
                </div>
            </div>
            
            <div id="typing-indicator" class="typing-indicator d-none">Someone is typing...</div>
            
            <div id="notification" class="notification d-none"></div>
            
            <div class="chat-footer">
                <div class="message-input-container">
                    <input type="text" id="messageInput" class="message-input" placeholder="Type a message...">
                </div>
                <button id="send-button" class="send-button">
                    <i class="bi bi-send-fill"></i>
                </button>
            </div>
        </div>
    </div>
    
    <!-- Create Room Modal -->
    <div class="modal fade" id="createRoomModal" tabindex="-1" aria-labelledby="createRoomModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createRoomModalLabel">Create New Room</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="new-room-name" class="form-label">Room Name</label>
                        <input type="text" class="form-control" id="new-room-name" placeholder="Enter room name">
                    </div>
                    <div class="mb-3">
                        <label for="new-room-description" class="form-label">Description (Optional)</label>
                        <textarea class="form-control" id="new-room-description" rows="2" placeholder="Enter room description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="create-room-btn">Create Room</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Create Group Modal -->
    <div class="modal fade" id="createGroupModal" tabindex="-1" aria-labelledby="createGroupModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createGroupModalLabel">Create New Group</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="new-group-name" class="form-label">Group Name</label>
                        <input type="text" class="form-control" id="new-group-name" placeholder="Enter group name">
                    </div>
                    <div class="mb-3">
                        <label for="new-group-description" class="form-label">Description (Optional)</label>
                        <textarea class="form-control" id="new-group-description" rows="2" placeholder="Enter group description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="create-group-btn">Create Group</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Upload File Modal -->
    <div class="modal fade" id="uploadFileModal" tabindex="-1" aria-labelledby="uploadFileModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadFileModalLabel">Upload File</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="file-upload" class="form-label">Select File</label>
                        <input class="form-control" type="file" id="file-upload">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="upload-btn">Upload</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Error Alert -->
    <div id="error-alert" class="alert alert-danger alert-dismissible fade show d-none" role="alert">
        <span id="error-message"></span>
    </div>
}
else
{
    <div class="text-center py-5">
        <h1 class="display-4">Welcome to ChatApp</h1>
        <p class="lead">A real-time messaging application built with ASP.NET Core and SignalR.</p>
        <hr class="my-4">
        <p>Please <a asp-area="Identity" asp-page="/Account/Login">log in</a> or <a asp-area="Identity" asp-page="/Account/Register">register</a> to start chatting.</p>
    </div>
}
